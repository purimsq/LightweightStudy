{
  "$schema": "https://schema.tauri.app/config/1.5.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5000",
    "distDir": "../dist/public",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "StudyCompanion",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "ollama",
            "cmd": "ollama",
            "args": true
          },
          {
            "name": "python",
            "cmd": "python",
            "args": true
          },
          {
            "name": "flask-app",
            "cmd": "../backend/app.py",
            "args": true
          }
        ]
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["**"]
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APPDATA", "$APPDATA/**", "$RESOURCE", "$RESOURCE/**"]
      },
      "path": {
        "all": true
      },
      "process": {
        "all": false,
        "restart": true,
        "exit": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:*", "https://localhost:*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.studycompanion.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["../backend/**/*", "../setup.sh"],
      "externalBin": ["ollama"],
      "copyright": "StudyCompanion Â© 2025",
      "category": "Education",
      "shortDescription": "Lightweight offline study companion",
      "longDescription": "A complete offline desktop study app with AI-powered features for personalized learning and study management."
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "StudyCompanion - Lightweight",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Light"
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "StudyCompanion"
    }
  }
}
